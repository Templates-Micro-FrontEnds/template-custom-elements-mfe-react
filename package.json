{
  "name": "mfe-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:shadowcss && npm run copy:preview",
    "build:shadowcss": "npx @tailwindcss/cli -i src/styles.shadow.css -o dist/mfe-shadow.css --minify",
    "copy:preview": "node -e \"require('fs').copyFileSync('public/index.html','dist/index.html')\"",
    "serve": "npx http-server dist -p 4302 --cors -c-1",
    "preview": "vite preview --port 4302"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@templates-micro-frontends/bridge": "^0.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/cli": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
